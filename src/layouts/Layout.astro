---
import '../styles/main.scss'

import { Localisation, getLocaleFromUrl } from '../lib/i18n'
const lang = getLocaleFromUrl(Astro.url)
const l = new Localisation(lang)

---

<!doctype html>
<html {lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{l.get('meta', 'title')}</title>
    <meta name="description" content={l.get('meta', 'description')}/>
  </head>
  <body>
    <slot />
  </body>
</html>

<style lang="scss">
@use '../styles/defs';

body {
  width: 100vw;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  background-color: defs.$background;
}

#content {
  box-sizing: border-box;
  width: 100%;
}
</style>
